          testimonials.map((t) => (
            <div class="carrusel-card w-full flex-shrink-0 px-2 lg:w-1/3">
              <div class="flex h-full flex-col rounded-2xl bg-white/95 p-6 text-gray-800 shadow-xl backdrop-blur-sm">
