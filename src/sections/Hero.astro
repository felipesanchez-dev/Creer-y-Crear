<style>
  :root {
    --font-main: "Montserrat", sans-serif;
    --color-text-primary: rgba(255, 255, 255, 0.9);
    --color-text-secondary: rgba(255, 255, 255, 0.8);
    --color-text-muted: rgba(255, 255, 255, 0.6);
    --color-accent-1: #ff6b6b;
    --color-accent-2: #feca57;
    --border-radius-pill: 50px;
    --shadow-cta: 0 4px 20px rgba(255, 107, 107, 0.4);
    --shadow-cta-hover: 0 8px 25px rgba(255, 107, 107, 0.6);
  }

  .hero-background {
    z-index: 0;
  }
  .container {
    max-width: 1200px;
  }

  .hero-title-main {
    font-family: var(--font-main);
    font-size: clamp(3.5rem, 8vw, 7rem);
    font-weight: 900;
    line-height: 0.9;
    margin: 0;
    color: white;
    text-shadow: 0 3px 15px rgba(0, 0, 0, 0.4);
  }

  .title-part {
    display: inline-block;
    will-change: transform;
    animation: titleFloat 3s ease-in-out infinite alternate;
  }
  .title-part-2 {
    animation-delay: 0.5s;
  }
  .title-connector {
    font-size: 0.7em;
    color: var(--color-text-primary);
    margin: 0 1rem;
    font-weight: 700;
    text-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
    will-change: transform, opacity;
    animation: connectorPulse 2s ease-in-out infinite;
  }

  .hero-subtitle {
    font-family: var(--font-main);
    font-size: clamp(1.1rem, 3vw, 1.5rem);
    font-weight: 500;
    color: var(--color-text-primary);
    min-height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  @media (min-width: 1024px) {
    .hero-subtitle {
      justify-content: flex-start;
    }
  }

  .hero-description {
    font-family: var(--font-main);
    color: var(--color-text-primary);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  @media (min-width: 1024px) {
    .hero-description {
      margin-left: 0;
      margin-right: 0;
    }
  }

  .cta-button {
    font-weight: 600;
    font-size: 1rem;
    padding: 1rem 2rem;
    border-radius: var(--border-radius-pill);
    border: none;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    text-decoration: none;
  }
  .cta-button-primary {
    background: linear-gradient(135deg, var(--color-accent-1), var(--color-accent-2));
    color: white;
    box-shadow: var(--shadow-cta);
  }
  .cta-button-primary::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
  }
  .cta-button-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-cta-hover);
  }
  .cta-button-primary:hover::before {
    left: 100%;
  }

  .cta-button-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
  }
  .cta-button-secondary:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.4);
    transform: translateY(-2px);
  }

  .floating-element {
    position: absolute;
    pointer-events: none;
    will-change: transform;
  }
  .floating-circle {
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    animation: floatCircle 8s ease-in-out infinite;
  }
  .circle-1 {
    width: 100px;
    height: 100px;
    top: 15%;
    left: 5%;
    animation-delay: 0s;
  }
  .circle-2 {
    width: 80px;
    height: 80px;
    top: 70%;
    right: 10%;
    animation-delay: 2s;
  }
  .circle-3 {
    width: 60px;
    height: 60px;
    bottom: 15%;
    left: 15%;
    animation-delay: 4s;
  }

  .floating-triangle {
    width: 0;
    height: 0;
    animation: floatTriangle 10s ease-in-out infinite;
  }
  .triangle-1 {
    border-left: 25px solid transparent;
    border-right: 25px solid transparent;
    border-bottom: 40px solid rgba(255, 255, 255, 0.1);
    top: 25%;
    right: 25%;
    animation-delay: 1s;
  }
  .triangle-2 {
    border-left: 20px solid transparent;
    border-right: 20px solid transparent;
    border-bottom: 30px solid rgba(255, 255, 255, 0.1);
    bottom: 25%;
    right: 5%;
    animation-delay: 3s;
  }

  .floating-icon {
    font-size: 2rem;
    opacity: 0.8;
    animation: floatIcon 6s ease-in-out infinite;
  }
  .icon-1 {
    top: 10%;
    left: 10%;
    animation-delay: 0s;
  }
  .icon-2 {
    top: 30%;
    right: 15%;
    animation-delay: 1s;
  }
  .icon-4 {
    top: 60%;
    right: 30%;
    animation-delay: 3s;
  }
  .icon-5 {
    bottom: 15%;
    right: 20%;
    animation-delay: 4s;
  }

  .scroll-indicator {
    display: flex;
    flex-direction: column;
    align-items: center;
    will-change: transform;
    animation: bounce 2s infinite;
  }
  .scroll-arrow {
    width: 2px;
    height: 30px;
    background: linear-gradient(to bottom, transparent, white);
    position: relative;
  }
  .scroll-arrow::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: -3px;
    width: 8px;
    height: 8px;
    border-right: 2px solid white;
    border-bottom: 2px solid white;
    transform: rotate(45deg);
  }

  @keyframes titleFloat {
    from {
      transform: translateY(0);
    }
    to {
      transform: translateY(-8px);
    }
  }
  @keyframes connectorPulse {
    0%,
    100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.1);
    }
  }
  @keyframes floatCircle {
    50% {
      transform: translateY(-20px) rotate(180deg);
    }
  }
  @keyframes floatTriangle {
    50% {
      transform: translateY(-15px) rotate(360deg);
    }
  }
  @keyframes floatIcon {
    50% {
      transform: translateY(-10px) scale(1.1);
    }
  }
  @keyframes bounce {
    0%,
    20%,
    50%,
    80%,
    100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }

  @media (max-width: 768px) {
    .hero-title-main {
      font-size: clamp(2.5rem, 12vw, 4rem);
    }
    .hero-subtitle {
      font-size: clamp(1rem, 4vw, 1.2rem);
    }
    .hero-description {
      font-size: 1rem;
    }
    .cta-button {
      padding: 0.875rem 1.5rem;
      font-size: 0.9rem;
    }
    .floating-icon {
      font-size: 1.5rem;
    }
  }
  @media (max-width: 480px) {
    .hero-content {
      padding-top: 5rem;
      padding-bottom: 5rem;
    }
  }
</style>
