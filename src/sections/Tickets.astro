---
import Marquee from "@/components/Marquee.astro"
import SponsorsBar from "@/components/SponsorsBar.astro"
import Ticket from "public/icons/ticket.svg"

interface Props {
  eventoActivo?: boolean
}

const { eventoActivo = false } = Astro.props
---

<SponsorsBar />

<section class="relative w-full overflow-hidden" id="Evento">
  <div class="bg-primary-light mx-auto my-[3%] -ml-2 w-[120%] -rotate-3 text-white">
    <Marquee content={Array(8).fill("Creer & Crear")} />
  </div>

  <div class="relative container mx-auto px-4 py-12">
    {
      !eventoActivo && (
        <p class="absolute inset-0 z-10 m-auto flex h-full w-full max-w-xl items-center justify-center text-center text-2xl font-semibold text-balance text-amber-200 text-shadow-[0_0_10px_#000]">
          ¡Gracias por asistir al evento!
        </p>
      )
    }

    <div class:list={["flex justify-center", { "pointer-events-none blur": !eventoActivo }]}>
      <div
        class="ticket-card group relative w-full max-w-md overflow-hidden rounded-3xl border-0 bg-gradient-to-br from-white to-indigo-50 backdrop-blur-sm transition-all duration-300 hover:translate-y-[-5px]"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 to-violet-500/10 opacity-50"
        >
        </div>
        <div
          class="absolute -top-20 -right-20 h-40 w-40 rounded-full bg-indigo-500/10 blur-3xl transition-all duration-500 group-hover:bg-indigo-500/20"
        >
        </div>
        <div
          class="absolute -bottom-24 -left-24 h-40 w-40 rounded-full bg-violet-500/10 blur-3xl transition-all duration-500 group-hover:bg-violet-500/20"
        >
        </div>

        <div class="relative p-8">
          <div class="flex items-start justify-between">
            <div>
              <div class="mt-4 flex items-center gap-3">
                <h3
                  class="bg-gradient-to-r from-indigo-400 to-violet-500 bg-clip-text text-5xl font-bold text-transparent"
                >
                  23
                </h3>
                <div>
                  <p class="text-lg font-medium text-gray-800">de Julio</p>
                  <p class="text-base text-gray-600">Miercoles</p>
                  <p class="text-base text-gray-600">18:00</p>
                </div>
              </div>
            </div>
            <div class="rounded-full bg-white/80 p-3 shadow-md">
              <Ticket aria-label="ticket" class="h-6 w-6 -rotate-12 fill-indigo-500" />
            </div>
          </div>
          <div class="mt-8">
            <a
              href="#"
              class="tickets-button relative flex w-full items-center justify-center gap-3 rounded-full bg-gradient-to-r from-indigo-500 via-violet-500 to-indigo-500 px-4 py-3 font-bold text-white shadow-lg shadow-indigo-500/30 transition-all hover:scale-105 hover:shadow-xl hover:shadow-indigo-500/40"
              tabindex="0"
              aria-label="Conseguir entradas para el evento (enlace externo, se abre en una pestaña nueva)"
              target="_blank"
              rel="noopener noreferrer"
            >
              <Ticket
                aria-hidden="true"
                focusable="false"
                class="hidden h-5 w-5 -rotate-12 animate-bounce fill-white sm:inline-block"
              />
              <span class="text-sm sm:text-base">Confirmar Asistencia</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <style>
    .tickets-button {
      background-size: 200% 100%;
      position: relative;
      overflow: hidden;
    }
    @keyframes shimmer {
      0% {
        background-position: 0% 0;
      }
      100% {
        background-position: 200% 0;
      }
    }
    @keyframes shine {
      0% {
        transform: translateX(-100%) rotate(30deg);
      }
      100% {
        transform: translateX(100%) rotate(30deg);
      }
    }
  </style>
</section>
