<style>
  .footer-pattern {
    background-image: radial-gradient(circle at 20% 80%, hsla(0, 79%, 63%, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, hsla(47, 98%, 61%, 0.1) 0%, transparent 50%);
  }
  .section-title {
    font-weight: 600;
    color: var(--light);
    position: relative;
    padding-bottom: 0.5rem;
  }
  .section-title::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 40px;
    height: 3px;
    background: linear-gradient(90deg, var(--accent-purple), var(--accent-pink));
    border-radius: 2px;
  }
  .lg .section-title::after {
    left: 0;
    transform: translateX(0);
  }
  .nav-link {
    color: var(--light-70);
    transition: color 0.3s ease;
  }
  .nav-link:hover {
    color: var(--accent-pink);
  }
  .social-icon {
    width: 48px;
    height: 48px;
    border-radius: 9999px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--secondary-60);
    transition: all 0.3s ease;
  }
  .social-link:hover .social-icon {
    transform: scale(1.1);
    box-shadow: 0 0 20px 0 var(--accent-purple-40);
  }
  .credits-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    background-color: var(--secondary-60);
    transition: all 0.3s ease;
  }
  .credits-btn:hover {
    background-color: var(--accent-purple);
  }
  .credits-icon {
    transition: transform 0.3s ease;
  }
  .credits-panel {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.5s ease-in-out;
  }
  .credits-panel.expanded {
    max-height: 500px;
  }
  .credits-content {
    margin-top: 1rem;
    padding: 1.5rem;
    border-radius: 1.5rem;
    background-color: var(--secondary-40);
    backdrop-filter: blur(10px);
  }
  .badge,
  .tech-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
  }
  .badge {
    background-color: var(--accent-purple-20);
    color: var(--accent-purple);
  }
  .tech-badge {
    background-color: var(--accent-pink-20);
    color: var(--accent-pink);
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const creditsButton = document.getElementById("credits-button")
    const creditsPanel = document.getElementById("credits-panel")
    const creditsIcon = creditsButton?.querySelector(".credits-icon")

    creditsButton?.addEventListener("click", (e) => {
      e.stopPropagation()
      const isExpanded = creditsPanel?.classList.toggle("expanded")
      creditsButton.setAttribute("aria-expanded", isExpanded ? "true" : "false")
      if (creditsIcon) {
        creditsIcon.style.transform = isExpanded ? "rotate(180deg)" : "rotate(0deg)"
      }
    })
  })
</script>
