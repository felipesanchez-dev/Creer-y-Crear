<script>
  // Funcionalidad del panel desplegable de cr√©ditos
  document.addEventListener("DOMContentLoaded", () => {
    const creditsButton = document.getElementById("credits-button")
    const creditsPanel = document.getElementById("credits-panel")
    const creditsIcon = creditsButton?.querySelector(".credits-icon") as HTMLElement

    creditsButton?.addEventListener("click", () => {
      const isExpanded = creditsPanel?.classList.contains("expanded")

      if (isExpanded) {
        creditsPanel?.classList.remove("expanded")
        if (creditsIcon) creditsIcon.style.transform = "rotate(0deg)"
        creditsButton?.setAttribute("aria-expanded", "false")
      } else {
        creditsPanel?.classList.add("expanded")
        if (creditsIcon) creditsIcon.style.transform = "rotate(180deg)"
        creditsButton?.setAttribute("aria-expanded", "true")
      }
    })

    // Cerrar el panel al hacer clic fuera
    document.addEventListener("click", (event) => {
      const target = event.target as HTMLElement
      if (!creditsButton?.contains(target) && !creditsPanel?.contains(target)) {
        creditsPanel?.classList.remove("expanded")
        if (creditsIcon) creditsIcon.style.transform = "rotate(0deg)"
        creditsButton?.setAttribute("aria-expanded", "false")
      }
    })
  })
</script>

