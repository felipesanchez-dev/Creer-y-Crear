---
// Configuración de redes sociales
const socialLinks = {
  tiktok: "https://tiktok.com/@juanseblack",
  instagram: "https://instagram.com/juanseblack",
  youtube: "https://youtube.com/@juanseblack",
}
---

<footer class="footer-container">
  <div class="mx-auto max-w-7xl px-6 py-10 lg:px-8">
    <div class="mb-9 text-center">
      <h2 class="brand-title">Creer y Crear</h2>
      <div class="creator-signature">
        <span class="creator-text">× JuanseBlack</span>
      </div>
      <p class="mission-text">
        Transformando vidas a través de historias auténticas y crecimiento personal
      </p>
    </div>
  </div>
</footer>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700;900&display=swap");

  .footer-container {
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
    font-family: "Poppins", sans-serif;
    color: white;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
  }

  .footer-container::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(circle at 20% 80%, rgba(37, 3, 99, 0.262) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(49, 2, 85, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 40% 40%, rgba(2, 50, 60, 0.1) 0%, transparent 50%);
    pointer-events: none;
  }

  /* Título Principal */
  .brand-title {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 900;
    letter-spacing: -0.02em;
    background: linear-gradient(
      135deg,
      #ffffff 0%,
      #ffffff 25%,
      #ffffff 50%,
      #fafafa 75%,
      #011e40 100%
    );
    background-size: 400% 400%;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradientShift 4s ease-in-out infinite;
    text-align: center;
    margin-bottom: 1rem;
    position: relative;
    z-index: 2;
  }

  @keyframes gradientShift {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  /* Firma del Creador */
  .creator-signature {
    position: relative;
    display: inline-block;
    margin-bottom: 2rem;
  }

  .creator-text {
    font-size: clamp(1.2rem, 3vw, 2rem);
    font-weight: 600;
    color: #feca57;
    text-shadow: 0 0 20px rgba(254, 202, 87, 0.5);
    position: relative;
    z-index: 2;
  }

  .creator-signature::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120%;
    height: 60px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(254, 202, 87, 0.2) 20%,
      rgba(254, 202, 87, 0.3) 50%,
      rgba(254, 202, 87, 0.2) 80%,
      transparent 100%
    );
    border-radius: 30px;
    filter: blur(15px);
    z-index: 1;
  }

  /* Texto de Misión */
  .mission-text {
    font-size: 1.1rem;
    color: #cbd5e1;
    font-weight: 400;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
    opacity: 0.9;
  }

  /* Iconos de Redes Sociales */
  .social-link {
    display: inline-block;
    transition:
      transform 0.3s ease,
      filter 0.3s ease;
  }

  .social-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0.05) 100%
    );
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #e2e8f0;
    backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
  }

  .social-icon::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.2) 50%,
      transparent 100%
    );
    transition: left 0.5s ease;
  }

  .social-link:hover {
    transform: translateY(-5px) scale(1.1);
    filter: drop-shadow(0 10px 20px rgba(255, 107, 107, 0.3));
  }

  .social-link:hover .social-icon {
    background: linear-gradient(
      135deg,
      rgba(255, 107, 107, 0.2) 0%,
      rgba(254, 202, 87, 0.2) 50%,
      rgba(72, 219, 251, 0.2) 100%
    );
    border-color: rgba(255, 107, 107, 0.4);
    color: #ffffff;
  }

  .social-link:hover .social-icon::before {
    left: 100%;
  }

  /* Hover específico para cada red social */
  .social-link:nth-child(1):hover .social-icon {
    background: linear-gradient(135deg, rgba(255, 0, 80, 0.2), rgba(255, 0, 80, 0.1));
    border-color: rgba(255, 0, 80, 0.4);
  }

  .social-link:nth-child(2):hover .social-icon {
    background: linear-gradient(135deg, rgba(225, 48, 108, 0.2), rgba(225, 48, 108, 0.1));
    border-color: rgba(225, 48, 108, 0.4);
  }

  .social-link:nth-child(3):hover .social-icon {
    background: linear-gradient(135deg, rgba(255, 0, 0, 0.2), rgba(255, 0, 0, 0.1));
    border-color: rgba(255, 0, 0, 0.4);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .social-icon {
      width: 50px;
      height: 50px;
    }

    .mission-text {
      font-size: 1rem;
      padding: 0 1rem;
    }
  }
</style>
