---
import "@fontsource/poppins/400.css"
import "@fontsource/poppins/500.css"
import "@fontsource/poppins/600.css"
import "@fontsource/poppins/700.css"
import "@fontsource/poppins/900.css"
import Header from "@/components/Header.astro"
import BackToTop from "@/components/BackToTop.astro"

import "@/styles/global.css"

interface Props {
  title?: string
}

const { title = "Creer y Crear · Un espacio de inspiración con JuanseBlack en Ibagué" } =
  Astro.props
const preloadImg = "/images/imagen.jpg"
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preload" as="image" href={preloadImg} />
    <title>{title}</title>
    <meta
      name="description"
      content="Creer y Crear es una iniciativa de JuanseBlack desde Ibagué, Tolima. Un espacio abierto al público donde jóvenes y personas de todas las edades comparten experiencias, reciben apoyo y crean comunidad."
    />
    <meta
      name="keywords"
      content="Creer y Crear, JuanseBlack, Ibagué, Tolima, apoyo juvenil, inspiración, comunidad, experiencias de vida, crecimiento personal"
    />
    <link rel="icon" type="image/svg+xml" href="/avatar.jpg" style="border-radius: 100%;" />

    <meta property="og:title" content="Creer y Crear · JuanseBlack desde Ibagué" />
    <meta
      property="og:description"
      content="Un espacio de encuentro y crecimiento impulsado por JuanseBlack, donde se cree en uno mismo y se crean nuevas realidades. Inspiración, escucha y comunidad desde Ibagué, Tolima."
    />
    <meta property="og:image" content="/images/imagen.jpg" />
    <meta property="og:url" content="https://www.creerycrear.com/" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Creer y Crear" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Creer y Crear · JuanseBlack en Ibagué" />
    <meta
      name="twitter:description"
      content="Iniciativa de JuanseBlack para inspirar, escuchar y acompañar a jóvenes y personas de todas las edades. Desde Ibagué para el mundo, un espacio para compartir y crecer."
    />
    <meta name="twitter:image" content="/images/imagen.jpg" />
    <meta name="twitter:url" content="https://www.creerycrear.com/" />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Creer y Crear",
        "url": "https://www.creerycrear.com",
        "logo": "https://www.creerycrear.com/images/imagen.jpg",
        "founder": {
          "@type": "Person",
          "name": "JuanseBlack",
          "sameAs": ["https://instagram.com/JuanseBlack", "https://www.tiktok.com/@JuanseBlack"]
        },
        "description": "Creer y Crear es un espacio abierto al público donde se comparten experiencias reales, se escucha con empatía y se brinda apoyo emocional. Un proyecto social desde Ibagué, Tolima, creado por JuanseBlack.",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Ibagué",
          "addressRegion": "Tolima",
          "addressCountry": "CO"
        },
        "sameAs": ["https://www.creerycrear.com"]
      }
    </script>
  </head>

  <body class="bg-primary w-screen overflow-x-hidden">
    <Header />
    <slot />
    <BackToTop />
  </body>
</html>
